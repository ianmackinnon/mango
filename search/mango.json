{
  "settings": {
    "analysis": {
      "filter": {
        "ngram_filter": {
          "type": "nGram",
          "max_gram": 10,
          "min_gram": 2
        }
      },
      "analyzer": {
        "straight_analyzer": {
          "filter": [
            "standard",
            "lowercase",
            "asciifolding"
          ],
          "type": "custom",
          "tokenizer": "standard"
        },
        "fuzzy_analyzer": {
          "filter": [
            "standard",
            "lowercase",
            "asciifolding",
            "ngram_filter"
          ],
          "type": "custom",
          "tokenizer": "standard"
        }
      }
    }
  },
  "mappings": {
    "org": {
      "properties": {
        "alias": {
          "type": "multi_field",
          "fields": {
            "fuzzy": {
              "type": "string",
              "index_analyzer": "fuzzy_analyzer",
              "search_analyzer": "fuzzy_analyzer"
            },
            "straight": {
              "type": "string",
              "index_analyzer": "straight_analyzer",
              "search_analyzer": "straight_analyzer"
            }
          }
        },
        "name": {
          "type": "string",
          "analyzer": "straight_analyzer"
        }
      }
    }
  }
}