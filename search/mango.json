{
  "settings": {
    "analysis": {
      "filter": {
        "ngram_filter": {
          "type": "nGram",
          "max_gram": 10,
          "min_gram": 2
        },
        "org_stop_filter": {
          "type": "stop",
          "stopwords": [
            "aerospace",
            "association",
            "communications",
            "company",
            "corporation",
            "confederation",
            "consulting",
            "developments",
            "electronics",
            "engineering",
            "enterprises",
            "gmbh",
            "group",
            "hydraulics",
            "inc",
            "industries",
            "international",
            "limited",
            "ltd",
            "manufacturing",
            "precision",
            "professional",
            "recruitment",
            "systems",
            "technology",
            "technologies",
            "telecommunications",
            "uk",
            "worldwide"
          ]
        }
      },
      "analyzer": {
        "straight_analyzer": {
          "filter": [
            "standard",
            "lowercase",
            "asciifolding",
            "org_stop_filter"
          ],
          "type": "custom",
          "tokenizer": "standard"
        },
        "fuzzy_analyzer": {
          "filter": [
            "standard",
            "lowercase",
            "asciifolding",
            "org_stop_filter",
            "ngram_filter"
          ],
          "type": "custom",
          "tokenizer": "standard"
        }
      }
    }
  },
  "mappings": {
    "org": {
      "properties": {
        "alias": {
          "type": "multi_field",
          "fields": {
            "fuzzy": {
              "type": "string",
              "index_analyzer": "fuzzy_analyzer",
              "search_analyzer": "fuzzy_analyzer"
            },
            "straight": {
              "type": "string",
              "index_analyzer": "straight_analyzer",
              "search_analyzer": "straight_analyzer"
            }
          }
        },
        "name": {
          "type": "string",
          "analyzer": "straight_analyzer"
        }
      }
    }
  }
}