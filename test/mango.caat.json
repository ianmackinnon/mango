    {
      "group": "HtmlModerator",
      "host": "$HOST",
      "auth": {
        "type": "firma-password",
        "credentials": ".credentials.json",
        "account": "moderator",
        "url": "/auth/login/password"
      },
      "tests": [
        "/organisation-tag/new?view=edit",
        "/event-tag/new?view=edit",
