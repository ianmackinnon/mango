    {
      "group": "JsonPublic",
      "host": "$HOST",
      "headers": {
        "Accept": "application/json"
      },
      "checks": [
        "json"
      ],
      "tests": [
        "/organisation",
        "/organisation-tag",
        "/event",
        "/event-tag",
        "/organisation/search?name={org_search_name}",
        "/organisation?json=true",
        "/event?json=true",
        "/event?json=true&past=true",
        "/event?json=true&pageView=map",
        "/event?json=true&pageView=map&past=true",
        "/dsei-target"
